<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".MyProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/MyProfilePhoto"
            android:src="@drawable/profile"
            android:layout_gravity="center"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/MyProfileChangePhoto"
            android:text="Change Profile Photo"
            android:background="@color/Green"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/Green"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginTop="16sp"
            android:id="@+id/TVMyProfilename"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textColor="@color/Green"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginTop="16sp"
            android:id="@+id/TVMyProfileUserName"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/Green"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginTop="16sp"
            android:id="@+id/TVMyProfileEmail"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/Green"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginTop="16sp"
            android:id="@+id/TVMyProfilePassword"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="@color/Green"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginTop="16sp"
            android:id="@+id/TVMyProfileAddress"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone No"
            android:textColor="@color/Green"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginTop="16sp"
            android:id="@+id/TVMyProfilePhoneNo"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="State"
            android:textColor="@color/Green"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginTop="16sp"
            android:id="@+id/TVMyProfileState"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="District"
            android:textColor="@color/Green"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginTop="16sp"
            android:id="@+id/TVMyProfileDistrict"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City"
            android:textColor="@color/Green"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginTop="16sp"
            android:id="@+id/TVMyProfileCity"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/myprofilebtnsingout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12sp"
            android:background="@color/Green"
            android:fontFamily="monospace"
            android:text="singout"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="30dp"
            android:textStyle="bold" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/myprofilebtnUpdateProfilet"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12sp"
            android:background="@color/Green"
            android:fontFamily="monospace"
            android:text="Uodate Profile"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="30dp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>