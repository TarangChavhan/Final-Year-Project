<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="16dp"
    tools:context=".SetUpNewPasswordActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="190dp"
        android:src="@drawable/mainlogo"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/ETSetUpNewPass"
        android:hint="New Password"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:inputType="text"
        android:layout_margin="16dp"
        android:background="@drawable/etshape"
        android:paddingLeft="24dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/ETsetUpConfrimNewPass"
        android:hint="New Password"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:inputType="text"
        android:layout_margin="16dp"
        android:background="@drawable/etshape"
        android:paddingLeft="24dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/BtnSetUpPass"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:text="Set Up Password"
        android:background="@drawable/btshape"
        android:layout_marginTop="24dp"/>
</LinearLayout>