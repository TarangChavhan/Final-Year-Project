<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/backlogin"
    tools:context=".Login">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:src="@drawable/logo"
        android:padding="16dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CVlogin"
        app:cardCornerRadius="28sp"
        app:cardBackgroundColor="#80FFFFFF"
        app:cardElevation="16sp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/CVll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center_horizontal"
                android:text="Login Here"
                android:textColor="@color/Brown"
                android:textSize="24dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ETloginUsername"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="8sp"
                android:background="@drawable/etshape"
                android:drawableLeft="@drawable/myprofile"
                android:drawablePadding="16dp"
                android:hint="Enter Username"
                android:inputType="text"
                android:paddingLeft="16sp"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ETloginpassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="8sp"
                android:background="@drawable/etshape"
                android:drawableLeft="@drawable/key_24"
                android:drawablePadding="16dp"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:paddingLeft="16sp"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TVForgotPassword"
                android:text="Forget Password"
                android:textStyle="bold|italic"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_gravity="right"
                />

            <CheckBox
                android:id="@+id/CBpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Show Password"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ButtonLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12sp"
                android:background="@drawable/btshape"
                android:fontFamily="monospace"
                android:text="login"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TVNewUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:layout_marginBottom="20sp"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="Create New Account"
                android:textColor="#092DF8"
                android:textSize="14sp"
                android:textStyle="italic|bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign with Google"
                android:id="@+id/btnGooglelogin"
                android:background="@drawable/common_google_signin_btn_text_dark_normal"
                android:layout_gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>